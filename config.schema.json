{
  "pluginAlias": "Aranet4Py",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Aranet4 Py Platform"
      },
      "fileName": {
        "title": "File Name or URL",
        "type": "string",
        "required": true,
        "default": "./output.txt"
      },
      "tempUnit": {
        "title": "Temperature Unit",
        "type": "string",
        "required": true,
        "default": "F"
      },
      "co2AlertThreshold": {
        "title": "CO2 Alert Threshold",
        "description": "When to consider that the CO2 level is too high (in ppm).",
        "type": "integer",
        "required": true,
        "default": 1400,
        "minimum": 0,
        "maximum": 2000
      },
      "batteryAlertThreshold": {
        "title": "Battery Alert Threshold",
        "description": "When to consider that the battery is low (in %).",
        "type": "integer",
        "required": true,
        "default": 10,
        "minimum": 0,
        "maximum": 100
      },
      "sensorDataRefreshInterval": {
        "title": "Sensor Data Refresh Interval",
        "description": "How often we should get data from the sensor (in seconds).",
        "type": "integer",
        "required": true,
        "default": 300,
        "minimum": 0,
        "maximum": 3600
      }
    }
  }
}
